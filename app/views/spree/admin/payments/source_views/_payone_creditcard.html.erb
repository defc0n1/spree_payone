<fieldset data-hook="credit_card">
  <legend><%= t(:credit_card) %></legend>

  <table class="index">
    <tr>
      <th colspan="4"><%= t(:details, scope: 'payone') %></th>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:card_number) %>:</td>
      <td>
        <%= payment.source.display_number %>
      </td>
      <td><%= label_tag nil, t(:expiration) %>:</td>
      <td>
        <%= payment.source.month %>/<%= payment.source.year %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:card_holder) %>:</td>
      <td>
        <%= payment.source.card_holder %>
      </td>
      <td><%= label_tag nil, t(:card_type) %>:</td>
      <td>
        <%= t(Spree::Payone::Utils::CreditCardType.validate_symbol(payment.source.cc_type)) %>
      </td>
    </tr>
  </table>
</fieldset>

