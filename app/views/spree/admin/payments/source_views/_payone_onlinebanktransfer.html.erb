<fieldset data-hook="online_bank_transfer">
  <legend><%= t(:online_bank_transfer) %></legend>

  <table class="index">
    <tr>
      <th colspan="4"><%= t(:details) %></th>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:online_bank_transfer_type) %>:</td>
      <td>
        <%= t(Spree::PAYONE::Utils::OnlineBankTransferType.validate_symbol(payment.source.online_bank_transfer_type)) %>
      </td>
      <td><%= label_tag nil, t(:bank_country) %>:</td>
      <td>
        <%= t(Spree::PAYONE::Utils::BankCountry.validate_symbol(payment.source.bank_country)) %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:bank_account) %>:</td>
      <td>
        <%= payment.source.bank_account %>
      </td>
      <td><%= label_tag nil, t(:bank_code) %>:</td>
      <td>
        <%= payment.source.bank_code %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:bank_group_type) %>:</td>
      <td colspan="3">
        <%= t(Spree::PAYONE::Utils::BankGroupType.validate_symbol(payment.source.bank_group_type)) %>
      </td>
    </tr>
  </table>
</fieldset>